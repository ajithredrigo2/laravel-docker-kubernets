apiVersion: apps/v1
kind: Deployment
metadata:
  name: laravel-deployment
spec:
  replicas: 3
  selector:
    matchLabels:
      app: laravel-app
  template:
    metadata:
      labels:
        app: laravel-app
        namespace: default
    spec:
      containers:
        - name: laravel
          image:  ajithredrigo2/laravel:laravel
          ports:
            - containerPort: 8000
          env:
            - name: APP_ENV
              value: production
            - name: DB_HOST
              value: localhost
            - name: DB_DATABASE
              value: laravel
            - name: DB_USERNAME
              value: root
            - name: DB_PASSWORD
              value: Ama$@In*a6dP
          resources:
            limits:
              cpu: 500m
              memory: 512Mi
            requests:
              cpu: 250m
              memory: 256Mi
