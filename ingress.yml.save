apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: laravel-ingress
spec:
  rules:
  - host: mydomain.com
    http:
      paths:
      - path: /laravel
        pathType: Prefix
        backend:
          service:
            name: laravel-service
            port:
              number: 8000
      - path: /var/www/html/laravel-docker-kubernets
        pathType: Prefix
        backend:
          service:
            name: apache-service
            port:
              number: 8000
